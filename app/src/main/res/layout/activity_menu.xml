<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menu_constraint_layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:background="@color/mainBackgroundColor"
    >

    <Button
        android:id="@+id/reputation_button"
        android:layout_width="150dp"
        android:layout_height="130dp"
        app:layout_constraintLeft_toLeftOf="@id/menu_constraint_layout"
        app:layout_constraintTop_toTopOf="@id/menu_constraint_layout"
        android:layout_margin="20dp"
        app:layout_constraintRight_toLeftOf="@id/right_button_menu"

        />

    <TextView
        android:id="@+id/reputation_text_view"
        android:layout_width="130dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/menu_constraint_layout"
        app:layout_constraintLeft_toLeftOf="@id/menu_constraint_layout"
        android:text="REPUTATION"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="33dp"
        android:layout_marginTop="100dp"
        app:layout_constraintRight_toRightOf="@id/menu_constraint_layout"
        android:layout_marginRight="230dp"
        android:elevation="5dp"/>

    <Button
        android:id="@+id/right_button_menu"
        android:layout_width="150dp"
        android:layout_height="130dp"
        app:layout_constraintRight_toRightOf="@id/menu_constraint_layout"
        app:layout_constraintTop_toTopOf="@id/menu_constraint_layout"
        android:layout_margin="20dp"
        app:layout_constraintLeft_toRightOf="@id/reputation_button"/>
</android.support.constraint.ConstraintLayout>